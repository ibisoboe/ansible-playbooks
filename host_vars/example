---
# file: host_vars/example

# This file shows sample definitions about variables of server configurations.

# NFS Configurations
mount_settings:
  - /var/nfs 0.0.0.0/24(rw,no_root_squash)

# Nginx Configurations
nginx:
  conf:
    user: nginx
    worker_processes: 1
    error_log:
      path: /var/log/nginx/error.log
      level: warn
    pid: /var/run/nginx.pid
    events:
      worker_connections: 1024
    http:
      include: /etc/nginx/mime.types
      default_type: application/octet-stream
    log_format: |-
      main  '$remote_addr - $remote_user [$time_local] "$request" '
                              '$status $body_bytes_sent "$http_referer" '
                              '"$http_user_agent" "$http_x_forwarded_for"'
    access_log:
      path: /var/log/nginx/access.log
      level: main
    sendfile: "on"
    tcp_nopush: "off"
    keepalive_timeout: 65
    gzip: "off"
    include: /etc/nginx/conf.d/*.conf
  vhosts:
    - listen: 80
      server_name: localhost
      charset: utf-8
      ssl: "on"
      ssl_certificate: /etc/nginx/cert/server.crt
      ssl_certificate_key: /etc/nginx/cert/server.key
      access_log:
        path: /var/log/nginx/localhost.access.log
        level: main
      errors:
        - {status_code: "404", path: "/404.html"}
        - {status_code: "500 502 503 504", path: "/50x.html"}
      locations:
        - path: /
          configs:
            - {name: "root", value: "/usr/share/nginx/html"}
            - {name: "index", value: "index.html index.htm"}
        - path: ~ \.php$
          config:
            - {name: "proxy_pass", value: "127.0.0.1:9000"}
            - {name: "fastcgi_index", value: "index.php"}
            - {name: "fastcgi_param", value: "SCRIPT_FILENAME  /scripts$fastcgi_script_name"}
            - {name: "include", value: "fastcgi_params"}
        - path: = /50x.html
          configs:
            - {name: "root", value: "/usr/share/nginx/html"}

# virtPHP Configurations
virtphp:
  become_user: root
  become: yes

# PHPBrew Configurations
phpbrew:
  become_user: root
  become: yes

# MySQL Configurations
mysql:
  mysqld:
    datadir: /var/lib/mysql
    socket: /var/lib/mysql/mysql.sock
    user: mysql
    symbolic_links: 0
    sql_mode: TRADITIONAL
    explicit_defaults_for_timestamp: true
    general_log: 1
    general_log_file: /var/lib/mysql/query.log
    character_set_server: utf8
  mysqld_safe:
    log-error: /var/log/mysqld.log
    pid-file: /var/run/mysqld/mysqld.pid

# ZeroMQ Configurations
